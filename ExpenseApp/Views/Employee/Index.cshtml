<body data-ng-app="expenseApp">
<div data-ng-controller="employeeController" class="container">
    <div class="row">
        <div class="col-md-12">
            <strong class="error">{{ error }}</strong>
            <br />
            <br />
            <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>New Employee</a></p>
            <form name="addEmployee" data-ng-show="addMode" style="width:600px;margin:0px auto;">
                <div class="form-group">
                    <label for="cname" class="col-sm-2 control-label">Name:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cname" placeholder="please enter your name" data-ng-model="newemployee.Name" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">Email:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="email" placeholder="please enter your email" data-ng-model="newemployee.Email" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="cdesignation" class="col-sm-2 control-label">Designation:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="designation" placeholder="please enter your designation" data-ng-model="newemployee.Designation" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addEmployee.$valid" class="btn btn-primary" />
                        <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Designation</th>
                        <th></th>
                    </tr>
                    <tr data-ng-repeat="employee in employees">
                        <td><strong data-ng-hide="employee.editMode">{{ employee.Id }}</strong></td>
                        <td>
                            <p data-ng-hide="employee.editMode">{{ employee.Name }}</p>
                            <input data-ng-show="employee.editMode" type="text" data-ng-model="employee.Name" />
                        </td>
                        <td>
                            <p data-ng-hide="employee.editMode">{{ employee.Email }}</p>
                            <input data-ng-show="employee.editMode" type="text" data-ng-model="employee.Email" />
                        </td>
                        <td>
                            <p data-ng-hide="employee.editMode">{{ employee.Designation }}</p>
                            <input data-ng-show="employee.editMode" type="text" data-ng-model="employee.Designation" />
                        </td>
                        <td>
                            <p data-ng-hide="employee.editMode">
                                <button class="btn btn-primary" data-ng-click="toggleEdit(employee)" href="javascript:;"><span class="glyphicon glyphicon-edit"></span></button>
                                <button class="btn btn-danger" data-ng-click="deleteemployee(employee)" href="javascript:;"><span class="glyphicon glyphicon-trash"></span></button>

                                <!--<a id="viewReportBtn"  data-ng-click="viewexpensereport(employee)" href="~/Views/ExpenseReport/Index.cshtml">View Expense Reports</a></p>-->
                                <!--Html.ActionLink("View Expense Reports", "Reports", "Employee")-->
                                <a target="_self" href="@Url.Action("Reports", "Employee")/{{employee.Id}}">View Expense Reports</a>

                            <p data-ng-show="employee.editMode">
                                <button class="btn btn-primary" data-ng-click="save(employee)" href="javascript:;"><span class="glyphicon glyphicon-floppy-disk"></span></button>
                                <button class="btn btn-danger" data-ng-click="toggleEdit(employee)" href="javascript:;"><span class="glyphicon glyphicon-remove"></span></button>
                            </p>
                        </td>
                    </tr>
                </table>
                <hr />
            </div>
        </div>
    </div>
</div>
   
</body>
